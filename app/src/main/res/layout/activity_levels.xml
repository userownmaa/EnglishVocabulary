<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:background="@drawable/blue_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:id="@+id/button_go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        tools:ignore="InvalidId,MissingConstraints">

        <TextView
            android:textSize="20dp"
            android:fontFamily="@font/abeezee"
            android:background="@drawable/style_button"
            android:id="@+id/button_levels_go_back"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </androidx.cardview.widget.CardView>


    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button_go_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:id="@+id/cardview_a1"
                    android:background="@drawable/style_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/abeezee"
                        android:id="@+id/textview_beginner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/beginner"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="35sp"
                        android:textStyle="bold">

                    </TextView>

                    <ProgressBar
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/style_progressbar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:id="@+id/progress_bar_a1"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/textview_beginner"
                        android:layout_width="170dp"
                        android:layout_height="20dp">

                    </ProgressBar>

                    <Button
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/abeezee"
                        android:background="@drawable/style_button"
                        android:id="@+id/button_start_a1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="55dp"
                        android:layout_marginEnd="25dp"
                        android:text="@string/start"
                        android:textColor="@color/black">

                    </Button>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:id="@+id/cardview_a2"
                    android:background="@drawable/style_textview_transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/abeezee"
                        android:id="@+id/textview_elementary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/elementary"
                        android:textAlignment="textStart"
                        android:textColor="@color/black_transparent"
                        android:textSize="35sp"
                        android:textStyle="bold">

                    </TextView>

                    <ProgressBar
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/style_progressbar_transparent"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:id="@+id/progress_bar_a2"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/textview_elementary"
                        android:layout_width="170dp"
                        android:layout_height="20dp">

                    </ProgressBar>


                    <Button
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/abeezee"
                        android:background="@drawable/style_button_transparent"
                        android:id="@+id/button_start_a2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="55dp"
                        android:layout_marginEnd="25dp"
                        android:text="@string/start"
                        android:textColor="@color/black_transparent">

                    </Button>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:id="@+id/cardview_b1"
                    android:background="@drawable/style_textview_transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/abeezee"
                        android:id="@+id/textview_intermediate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/intermediate"
                        android:textAlignment="textStart"
                        android:textColor="@color/black_transparent"
                        android:textSize="35sp"
                        android:textStyle="bold">

                    </TextView>

                    <ProgressBar
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/style_progressbar_transparent"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:id="@+id/progress_bar_b1"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/textview_intermediate"
                        android:layout_width="170dp"
                        android:layout_height="20dp">

                    </ProgressBar>

                    <Button
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/abeezee"
                        android:background="@drawable/style_button_transparent"
                        android:id="@+id/button_start_b1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="55dp"
                        android:layout_marginEnd="25dp"
                        android:text="@string/start"
                        android:textColor="@color/black_transparent"
                        tools:ignore="DuplicateIds">                        >

                    </Button>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:id="@+id/cardview_b2"
                    android:background="@drawable/style_textview_transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/abeezee"
                        android:id="@+id/textview_up_intermediate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/upper_n_intermediate"
                        android:textColor="@color/black_transparent"
                        android:textSize="35sp"
                        android:textStyle="bold">

                    </TextView>

                    <ProgressBar
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/style_progressbar_transparent"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:id="@+id/progress_bar_b2"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/textview_up_intermediate"
                        android:layout_width="170dp"
                        android:layout_height="20dp">

                    </ProgressBar>

                    <Button
                        android:textStyle="bold"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:fontFamily="@font/abeezee"
                        android:background="@drawable/style_button_transparent"
                        android:id="@+id/button_start_b2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="100dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="25dp"
                        android:text="@string/start"
                        android:textColor="@color/black_transparent"
                        android:textSize="20sp">

                    </Button>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:id="@+id/cardview_c1"
                    android:background="@drawable/style_textview_transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/abeezee"
                        android:id="@+id/textview_advanced"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/advanced"
                        android:textAlignment="textStart"
                        android:textColor="@color/black_transparent"
                        android:textSize="35sp"
                        android:textStyle="bold">

                    </TextView>

                    <ProgressBar
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/style_progressbar_transparent"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:id="@+id/progress_bar_c1"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/textview_advanced"
                        android:layout_width="170dp"
                        android:layout_height="20dp">

                    </ProgressBar>

                    <Button
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:fontFamily="@font/abeezee"
                        android:background="@drawable/style_button_transparent"
                        android:id="@+id/button_start_c1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="55dp"
                        android:layout_marginEnd="25dp"
                        android:text="@string/start"
                        android:textColor="@color/black_transparent"
                        android:textSize="20sp">

                    </Button>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:id="@+id/cardview_c2"
                    android:background="@drawable/style_textview_transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/abeezee"
                        android:id="@+id/textview_proficiency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/proficiency"
                        android:textAlignment="textStart"
                        android:textColor="@color/black_transparent"
                        android:textSize="35sp"
                        android:textStyle="bold">

                    </TextView>

                    <ProgressBar
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/style_progressbar_transparent"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:id="@+id/progress_bar_c2"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/textview_proficiency"
                        android:layout_width="170dp"
                        android:layout_height="20dp">

                    </ProgressBar>

                    <Button
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:fontFamily="@font/abeezee"
                        android:background="@drawable/style_button_transparent"
                        android:id="@+id/button_start_c2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="55dp"
                        android:layout_marginEnd="25dp"
                        android:text="@string/start"
                        android:textColor="@color/black_transparent"
                        android:textSize="20sp">

                    </Button>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

